{% extends '::base.html.twig' %}


{% block breadcrumb %}
<ol class="breadcrumb">
  <li><a href="{{ path('default_index') }}">Inicio</a></li>
  <li><a href="#">Creación & asignación</a></li>
  <li><a href="{{ path('archivos_de_eventos_index') }}">Importar eventos</a></li>
  <li class="active">Ver</li>
</ol>
{% endblock %}

{% block body -%}
    <h3>Ver Archivo de eventos</h3>

    <table class="records_properties table table-striped">
        <tbody>
            <tr>
                <th>Fecha</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Archivo</th>
                <td>{{ entity.path }}</td>
            </tr>
            <tr>
                <th>Notas</th>
                <td>{{ entity.notes }}</td>
            </tr>
        </tbody>
    </table>

    <p class="text-left">
    
                  <a href="{{ path('archivos_de_evento_download', { 'id': entity.id }) }}">
                    <button type="button" class="btn btn-default btn-xs">
                      <span class="glyphicon glyphicon-download"></span> Archivo
                    </button>
                  </a>

    </p>


    <p class="text-left">
    <a href="{{ path('archivos_de_eventos_index') }}">
      <button type="button" class="btn btn-default btn-xs">
        <span class="glyphicon glyphicon-th-list"></span> Volver
      </button>
    </a>
    </p>{% endblock %}
