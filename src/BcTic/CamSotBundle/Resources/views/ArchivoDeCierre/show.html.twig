{% extends '::base.html.twig' %}


{% block breadcrumb %}
<ol class="breadcrumb">
  <li><a href="{{ path('default_index') }}">Inicio</a></li>
  <li class="active">Cierre</li>
  <li class="active"><a href="{{ path('historiales_index') }}">No conformidades</a></li>
  <li class="active">Ver</li>
</ol>
{% endblock %}

{% block body -%}
    <h3>Ver</h3>

    <table class="records_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fechadeinicio</th>
                <td>{{ entity.fechaDeInicio|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fechadetermino</th>
                <td>{{ entity.fechaDeTermino|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <p class="text-left">

        <a href="{{ path('archivodecierre_delete', { 'id': entity.id, 'token': csrf.generateCsrfToken('entity' ~ entity.id) }) }}" class="confirm">
                    <button type="button" class="btn btn-default btn-xs">
                      <span class="glyphicon glyphicon-trash"></span> Borrar
                    </button>
                  </a>
                  
</p>


    <p class="text-left">
    <a href="{{ path('archivodecierre_index') }}">
      <button type="button" class="btn btn-default btn-xs">
        <span class="glyphicon glyphicon-th-list"></span> Volver
      </button>
    </a>
    </p>{% endblock %}
