{% extends '::base.html.twig' %}

{% block breadcrumb %}
<ol class="breadcrumb">
  <li><a href="{{ path('default_index') }}">Inicio</a></li>
  <li><a href="{{ path('turnos_calendar') }}">Calendario de turnos</a></li>
  <li class="active">Agregar</li>
</ol>
{% endblock %}

{% block body -%}
    <h3>Agregar Rol de Turno </h3>

    {{ form_start(form) }}

      {{ form_row(form.turno) }}
      {{ form_row(form.fecha) }}

      <div class="form-group">
        <label class="col-sm-3 control-label required">Roles</label>
        <div class="col-sm-9">
          {% for rol in form.rolesEnTurno %}
            <div class="row">
              <div class="col-sm-6">
                {{ form_row(rol.rol) }}
              </div>
              <div class="col-sm-6">
                {{ form_row(rol.registro) }}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

    {{ form_end(form) }}    


    <p class="text-left">
    <a href="{{ path('turnos_calendar') }}">
      <button type="button" class="btn btn-default btn-xs">
        <span class="glyphicon glyphicon-th-list"></span> Volver
      </button>
    </a>
    </p>{% endblock %}
